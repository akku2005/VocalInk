{
  "watch": ["server.js", "src"],
  "ext": "js,json",
  "ignore": [
    "public/audio",
    "public/tts",
    "public/uploads",
    "logs",
    "coverage",
    "node_modules",
    "docs",
    "swagger.json"
  ],
  "delay": "200ms",
  "env": {
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--max-old-space-size=4096 --expose-gc"
  },
  "signal": "SIGTERM"
}

