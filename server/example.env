# Application environment
NODE_ENV=development

# Server configuration
PORT=3000
HOST=localhost
APP_VERSION=1.0.0

# Database connection with enhanced options
MONGO_URI=mongodb://localhost:27017/vocalink
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME_MS=30000
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000
MONGO_SOCKET_TIMEOUT_MS=45000

# JWT Configuration - IMPORTANT: Change these in production!
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-256-bit-cryptographically-secure-secret-here-change-this
JWT_REFRESH_SECRET=your-256-bit-cryptographically-secure-refresh-secret-here-change-this
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d
JWT_RESET_EXPIRES_IN=1h
JWT_VERIFICATION_EXPIRES_IN=10m
JWT_ISSUER=vocalink
JWT_AUDIENCE=vocalink-users
JWT_BIND_TO_DEVICE=true
JWT_BIND_TO_IP=true
JWT_ENABLE_ROTATION=true
JWT_ROTATION_THRESHOLD=5m

# SMTP Configuration for Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Configuration
EMAIL_FROM=noreply@vocalink.com
EMAIL_SUPPORT=support@vocalink.com
COMPANY_NAME=VocalInk
COMPANY_LOGO=https://your-domain.com/logo.png
FRONTEND_URL=http://localhost:5173
SUPPORT_URL=https://your-domain.com/support
PRIVACY_URL=https://your-domain.com/privacy

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_PREVENT_COMMON=true
PASSWORD_PREVENT_SEQUENTIAL=true
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this-in-production
ENABLE_HTTPS=false
FORCE_HTTPS=false

# Rate Limiting - Enhanced Configuration
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5
SENSITIVE_RATE_LIMIT_WINDOW_MS=3600000
SENSITIVE_RATE_LIMIT_MAX=10
GENERAL_RATE_LIMIT_WINDOW_MS=900000
GENERAL_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=200
ADMIN_RATE_LIMIT_MAX=500
WRITER_RATE_LIMIT_MAX=200
READER_RATE_LIMIT_MAX=100
ANONYMOUS_RATE_LIMIT_MAX=50

# AI Service Rate Limits
AI_RATE_LIMIT_PER_HOUR=100
TTS_RATE_LIMIT_PER_HOUR=50
STT_RATE_LIMIT_PER_HOUR=30
SUMMARY_RATE_LIMIT_PER_HOUR=100
ANALYSIS_RATE_LIMIT_PER_HOUR=200
FILE_UPLOAD_RATE_LIMIT_PER_HOUR=20
RECOMMENDATION_RATE_LIMIT_PER_HOUR=150
SEARCH_RATE_LIMIT_PER_HOUR=300
NOTIFICATION_RATE_LIMIT_PER_HOUR=100
MODERATION_RATE_LIMIT_PER_HOUR=200
CLUSTERING_RATE_LIMIT_PER_HOUR=50
AUTO_TAGGING_RATE_LIMIT_PER_HOUR=80

# Account Security
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_15MIN=900000
LOCKOUT_DURATION_1HOUR=3600000
LOCKOUT_DURATION_24HOURS=86400000
VERIFICATION_CODE_EXPIRY=600000
PASSWORD_RESET_EXPIRY=3600000
ENABLE_2FA=true
ENABLE_DEVICE_FINGERPRINTING=true
ENABLE_ACCOUNT_LOCKOUT=true
ENABLE_PASSWORD_HISTORY=true
PASSWORD_HISTORY_SIZE=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
ENABLE_STRUCTURED_LOGGING=true

# Monitoring and Analytics
ENABLE_MONITORING=true
ENABLE_ANALYTICS=false
SENTRY_DSN=
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# AI Services Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"your-project-id"}

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CLIENTS=20
REDIS_RETRY_DELAY=1000
REDIS_MAX_RETRIES=3
ENABLE_CACHING=true
CACHE_TTL=300

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads
ENABLE_FILE_SCANNING=true
ENABLE_FILE_VALIDATION=true
MAX_FILES_PER_REQUEST=5

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_TEST_MODE=false
AUTO_VERIFY_USERS=false
ENABLE_MOCK_SERVICES=false

# Production Settings (override in production)
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_CDN=false
CDN_URL=
ENABLE_SSL_REDIRECT=false
SSL_REDIRECT_STATUS=301

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true
ENABLE_FRAME_DENY=true

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=86400000
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false

# CAPTCHA Configuration
ENABLE_CAPTCHA=false
CAPTCHA_SITE_KEY=your-captcha-site-key
CAPTCHA_SECRET_KEY=your-captcha-secret-key
CAPTCHA_THRESHOLD=3

# Fraud Detection
ENABLE_FRAUD_DETECTION=true
FRAUD_RISK_THRESHOLD_LOW=0.3
FRAUD_RISK_THRESHOLD_MEDIUM=0.6
FRAUD_RISK_THRESHOLD_HIGH=0.8
FRAUD_RISK_THRESHOLD_CRITICAL=0.9

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups